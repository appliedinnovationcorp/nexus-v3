{
  "name": "nexus-workspace",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=!@nexus/docs && changeset publish",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:migrate": "turbo run db:migrate",
    "db:studio": "turbo run db:studio",
    "docker:build": "docker build -t nexus-app .",
    "docker:run": "docker run -p 3000:3000 nexus-app",
    "docker:dev": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@nexus/eslint-config": "workspace:*",
    "@nexus/prettier-config": "workspace:*",
    "@nexus/tsconfig": "workspace:*",
    "eslint": "^8.57.0",
    "prettier": "^3.0.0",
    "turbo": "^1.10.0",
    "typescript": "^5.2.2"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
