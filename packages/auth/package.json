{
  "name": "@nexus/auth",
  "version": "0.1.0",
  "description": "Authentication utilities and components for Nexus Workspace",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@nexus/types": "workspace:*",
    "@nexus/utils": "workspace:*",
    "next-auth": "^4.24.0",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.0",
    "@types/bcryptjs": "^2.4.0",
    "@nexus/eslint-config": "workspace:*",
    "@nexus/prettier-config": "workspace:*",
    "@nexus/tsconfig": "workspace:*",
    "typescript": "^5.2.2",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0"
  },
  "keywords": ["auth", "authentication", "utilities", "nexus"],
  "author": "Nexus Team",
  "license": "MIT"
}
